<div class="card top-card">

    <div class="card-header">
        <h2>Change your password</h2>
    </div>

    <div class="card-body" style="padding:0.5rem;">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name),
            html: { method: :put }) do |f| %>

            <%= f.error_notification %>

            <%= f.input :reset_password_token, as: :hidden %>
            <%= f.full_error :reset_password_token %>

            <div class="form-inputs">
              <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
              <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Change my password", class: "btn btn-success" %>
            </div>
        <% end %>

        <p><p>
        <%= render "devise/shared/links" %>
    </div>
</div>

<% content_for :sidebar do %>
    <div style="padding:0.5rem;">
        No actions available
    </div>
<% end %>
