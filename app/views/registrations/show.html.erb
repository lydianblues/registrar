<div class="card top-card">

    <div class="card-header">
       <h2>Registration Details</h2>
    </div>

    <%= render partial: "details" %>
</div>

<div class="card">
    <div class="card-header">
       <h2>Recalculate Price</h2>
    </div>

    <div class="card-body card-table" style="padding:1rem;">
        <div class="row">
            <div class="col-sm-9">
                <%= "#{@registration.regular_count} Students @ Regular Price " +
                    "(#{@registration.training.regular_price.format})" %>              
            </div>
            
            <div class="col-sm-3">
                <div style="float:right;">
                    <%= (@registration.training.regular_price *
                         @registration.regular_count).format %> 
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-9">
                <%= "#{@registration.group_count} Students @ Group Price " +
                    "(#{@registration.training.group_price.format})" %>              
            </div>
            
            <div class="col-sm-3">
                <div style="float:right;">
                    <%= (@registration.training.group_price *
                         @registration.group_count).format %> 
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-9">
                <%= "#{@registration.student_count} Students @ Discount Price " +
                    "(#{@registration.training.student_price.format})" %>              
            </div>
            
            <div class="col-sm-3">
                <div style="float:right;">
                    <%= (@registration.training.student_price *
                         @registration.student_count).format %> 
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-9">
               Total         
            </div>
            
            <div class="col-sm-3">
                <div style="float:right;">
                    <%= @amt_due = (@registration.training.student_price *
                         @registration.student_count) +
                        (@registration.training.group_price *
                         @registration.group_count) +
                        (@registration.training.regular_price *
                         @registration.regular_count) 
                        @amt_due.format
                    %> 
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12" style="height:1.5em;">      
            </div>
        </div>

        <div class="row">
            <div class="col-sm-9">   
                Total Charged   
            </div>
            <div class="col-sm-3">
                <div style="float:right;">
                    <%= @registration.amount_charged.format %>
                   
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-9">   
                Total Refunded   
            </div>
            <div class="col-sm-3">
                <div style="float:right;">
                    <%= @registration.amount_refunded.format %>
                   
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-9">   
                Total Credits   
            </div>
            <div class="col-sm-3">
                <div style="float:right;">
                    <%= @amt_paid = @registration.amount_charged -
                        @registration.amount_refunded
                        @amt_paid.format
                     %>
                   
                </div>
            </div>
        </div>
        <% if @amt_paid > @amt_due %>
            <div class="row" style="color:red;">
                <div class="col-sm-9">   
                    Balance to Refund 
                </div>
                <div class="col-sm-3">
                    <div style="float:right;">
                        <%= (@amt_paid - @amt_due).format %>
                    </div>
                </div>
        </div>
        <% elsif @amt_paid < @amt_due %>
            <div class="row" style="color:red;">
                <div class="col-sm-9">   
                    Balance Due   
                </div>
                <div class="col-sm-3">
                    <div style="float:right;">
                        <%= (@amt_due - @amt_paid).format %>
                    </div>
                </div>
            </div>
        <% end %>

    </div>
</div>

<% content_for :wide_table  do %>
    <div class="card">
        <div class="card-header">
            <div style="float:left;"><h2>Transactions for this Registration</h2></div>
        </div>

        <div class="card-body" style="padding:1rem 1rem 0rem 1rem">

            <div class="table-responsive">
              <table id="transactions-table"
                class="table table-striped table-sm table-hover table-bordered">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Status</th>
                    <th>Owner</th>
                    <th>Payer</th>
                    <th>Amount</th>
                    <th>Updated At</th>
                    <th>Refresh</th>
                  </tr>
                </thead>
                <tbody>
                    <% @registration.transactions.each do |t| %>
                        <tr>
                            <td><%= link_to t.transaction_id, transaction_path(t.id) %></td>
                            <td><%= t.status %></td>
                            <td><%= link_to t.owner.handle, t.owner %></td>
                            <td>
                                <% if t.payer_first_name.blank?  || t.payer_last_name.blank? %>
                                    Unspecified
                                <% else %>
                                    <%= t.payer_first_name + " " + t.payer_last_name %>
                                <% end %>
                            </td>
                            <td><%= format("$%.2f", t.amount) %></td>
                            <td><%= t.updated_local_time %>
                            <td><%= link_to 'Refresh', "/api/transaction/#{t.id}/refresh.js", 
                              remote: true, class: 'btn btn-primary btn-sm' %></td>
                        </tr>
                    <% end %>
                </tbody>
              </table>
            </div>
        </div>
    </div>
<% end %>

<% content_for :wide_table  do %>
    <div class="card">
        <div class="card-header">
          <% if @registration.registerable_type == "Student" %>
            <h2>Single Registrant</h2>
          <% else %>
            <h2>Members of Registered Group <%= link_to @registration.registerable.handle,
              @registration.registerable %></h2>
          <% end %>
        </div>

        <div class="card-body" style="padding:1rem 1rem 0rem 1rem">

            <div class="table-responsive">
              <table class="table table-striped table-sm table-hover table-bordered">
                <thead>
                  <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Student Discount</th>
                    <th>Occupation</th>
                    <th>Organization</th>
                  </tr>
                </thead>
                <tbody>
                    <% @registrants.each do |r| %>
                        <tr>
                            <td><%= link_to r.handle, r %></td>
                            <td><%= mail_to r.wp_email, r.wp_email %></td>
                            <td><%= r.student_discount? ? "Yes" : "No" %></td>
                            <td><%= r.occupation  %></td>
                            <td><%= r.organization %></td>
                        </tr>
                    <% end %>
                </tbody>
              </table>
            </div>
        </div>
    </div>
<% end %>

<% content_for :sidebar do %>
  
    
    <div class="alert alert-info" role="alert" style="margin-bottom:0em;">
      Edit this registration to record new transactions for refunds or additional
      charges.
      <p><p>
      <%= link_to 'Edit Registration', edit_registration_path(@registration),
        class: 'btn btn-sm btn-danger', method: :get %>
    
  </div>
<% end %>
