<div class="card top-card">
  

<div class="card-header" style="margin-bottom:1em;">
    <div style="float:left;"><h2>Students</h2></div>
    <div style="float:right;">
      <%= link_to 'New Student', new_student_path, class: 'btn btn-primary btn-md' %>
    </div>
  </div>


  <div class="card-body">

    <div class="table-responsive">
      <table id="students-table" class="table table-striped table-sm table-hover table-bordered">
        <thead>
          <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Occupation</th>
            <th>Organization</th>
            <th></th> <!-- DataTables doesn't like colspan on last <th> element. -->
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% unless @ajax %>
            <% @students.each do |student| %>
              <tr>
                <td><%= link_to student.wp_first_name + " " + student.wp_last_name, student %></td>
                <td><%= student.wp_email %></td>
                <td><%= student.occupation %></td>
                <td><%= student.organization %></td>
                <td><%= link_to 'Edit', edit_student_path(student),
                  class: 'btn btn-primary btn-sm' %></td>
                <td><%= link_to 'Delete', student, class: 'btn btn-sm btn-danger', 
                  method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>

$('#students-table').dataTable( {
  processing: true,
  serverSide: true,
  ajax: {
    url: '/students/datatables',
    processing: true,
    serverSide: true
  },
  columns: [
    {data: 'full_name'},
    {data: 'wp_email'},
    {data: 'occupation'},
    {data: 'organization'},
    {data: 'edit_button', orderable: false, searchable: false },
    {data: 'delete_button', orderable: false, searchable: false }
  ],

} );

</script>
