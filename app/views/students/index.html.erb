<h1>Students</h1>

<div class="table-responsive">
  <table class="table table-striped table-condensed table-hover">
    <thead>
      <tr>
        <th>Full Name</th>
        <th>Email</th>
        <th>Occupation</th>
        <th>Organization</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= link_to student.first_name + " " + student.last_name, student %></td>
          <td><%= student.email %></td>
          <td><%= student.occupation %></td>
          <td><%= student.organization %></td>
          <td><%= link_to 'Edit', edit_student_path(student),
            class: 'btn btn-primary btn-xs' %></td>
          <td><%= link_to 'Delete', student, class: 'btn btn-xs btn-danger', 
            method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Student', new_student_path, class: 'btn btn-primary btn-sm' %>

