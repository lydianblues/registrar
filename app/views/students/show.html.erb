<div class="card top-card">

    <div class="card-header">
        <h2>Student Details</h2>
    </div>

    <div class="card-body" style="padding:1em;">

        <h3><%= @student.wp_first_name + " " + @student.wp_last_name %></h3>
  
        <p>
            <strong>ID:</strong>
            <%= @student.id %>
        </p>
        <p>
            <strong>Email:</strong>
            <%= @student.wp_email %>
        </p>
        <p>
            <strong>Occupation:</strong>
            <%= @student.occupation %>
        </p>
        <p>
            <strong>Organization:</strong>
            <%= @student.organization %>
        </p>
        <p>
            <strong>Created at:</strong>
            <%= @student.created_at.in_time_zone('Pacific Time (US & Canada)').strftime('%m/%d/%Y %l:%M %p') %>
        </p>
        <p>
            <strong>Updated at:</strong>
            <%= @student.updated_at.in_time_zone('Pacific Time (US & Canada)').strftime('%m/%d/%Y %l:%M %p') %>
        </p>
      
        <div class="form-actions">
          <%= link_to 'Back', students_path, :class => 'btn btn-sm btn-info'  %>
          <%= link_to 'Edit', edit_student_path(@student), :class => 'btn btn-sm btn-info' %>
            <%= link_to 'Delete', student_path(@student), class: 'btn btn-sm btn-danger', 
                    method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>

    </div>
</div>

<% content_for :wide_table do %>
    <div class="card">

    <div class="card-header">
        <h2>Trainings</h2>
    </div>

    <div class="card-body" style="padding:1em;">

        <div class="table-responsive">
            <table id="students-table" class="table table-striped table-sm table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Course Name</th>
                        <th>Code</th>
                        <th>Start</th>
                        <th>End</th>
                        <th>City</th>
                    </tr>
                </thead>
                <tbody>
                    <% @trainings.each do |t| %>
                        <td><%= t.course.name %></td>
                        <td><%= t.code %></td>
                        <td><%= t.start_date.strftime('%m/%d/%Y') %></td>
                        <td><%= t.end_date.strftime('%m/%d/%Y') %></td>
                        <td><%= t.location.city %></td>         
                    <% end %>
                </tbody>
            </table>

        </div>
    </div>

    <div class="card">

        <div class="card-header">
            <h2>Attendance</h2>
        </div>

        <div class="card-body" style="padding:1em;">
        Day by day attendance for each training goes here...
        </div>
    </div>
<% end %>