<%= simple_form_for(@student) do |f| %>
    <%= f.error_notification %>
    <%= f.input :wp_first_name, label: "First Name" %>
    <%= f.input :wp_last_name, label: "Last Name" %>
    <% if disable_email %>
        <%= f.input :wp_email, label: "Email", disabled: true %>
    <% else %>
        <%= f.input :wp_email, label: "Email" %>
    <% end %>
    <%= f.input :student_discount, label: raw("&nbsp;Student Discount") %>
    <%= f.input :email_list, label: raw("&nbsp;Add to Email List") %>
    <%= f.input :occupation %>
    <%= f.input :organization %>
    <%= f.button :submit, class: 'btn btn-md btn-primary' %>
<% end %>