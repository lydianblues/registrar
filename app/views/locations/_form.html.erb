<%= simple_form_for(@location, html: { class: 'form-vertical' }) do |f| %>

    <%= f.error_notification %>

  <fieldset>
    <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :street_1 %>
        <%= f.input :street_2 %>
        <%= f.input :city %>
        <%= f.input :state %>
        <%= f.input :zip %>
        <%= f.input :notes %>
    </div>

    <div class="form-actions">
        <%= f.button :submit, class: 'btn btn-md btn-primary' %>
        <%= link_to 'Cancel', locations_path, class: 'btn btn-md btn-warning' %>
    </div>

  </fieldset>
<% end %>
