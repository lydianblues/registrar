<div class="card top-card">
  
  <div class="card-header">
    <div style="float:left;"><h2>Locations</h2></div>
    <div style="float:right;">
      <%= link_to 'New Location', new_location_path, class: 'btn btn-primary btn-md' %>
    </div>
  </div>

  <div class="card-body">

    <div class="table-responsive">
      <table class="table table-striped table-sm table-hover table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>City</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @locations.each do |location| %>
            <tr>
              <td><%= link_to location.name, location %></td>
              <td><%= location.city %></td>
              <td><%= link_to 'Edit', edit_location_path(location),
                class: 'btn btn-primary btn-sm' %></td>
              <td><%= link_to 'Delete', location, class: 'btn btn-sm btn-danger', 
                method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
 