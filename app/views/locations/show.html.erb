<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @location.name %></h3>
  </div>
  <div class="panel-body">
  <p>
      <strong>ID:</strong>
      <%= @location.id %>
  </p>
  <p>
      <strong>Address:</strong>
      <!-- This styling is not very good.  Use isotope? -->
      <div style="margin-left:1em;border:1px solid black; border-radius:8px;padding:1em;width:50%">
      <%= @location.street_1 %><br>
      <% if @location.street_2 %>
        <%= @location.street_2%><br>
      <% end %>
      <%= @location.city %>,&nbsp;
      <% if @location.country %>
        <%= @location.country %>
      <% else %>
        <%= @location.state %>
        <%= @location.zip %>
      <% end %>
      </div>
  </p>
  <p>
      <strong>Notes:</strong>
      <%= @location.notes %>
  </p>
  </div>
</div>


<div class="form-actions">
  <%= link_to 'Back', locations_path, :class => 'btn btn-sm btn-info'  %>
  <%= link_to 'Edit', edit_location_path(@location), :class => 'btn btn-sm btn-info' %>
    <%= link_to 'Delete', location_path(@location), class: 'btn btn-sm btn-danger', 
            method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
