<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @location.name %></h3>
  </div>
  <div class="panel-body">
  <p>
      <strong>ID:</strong>
      <%= @location.id %>
  </p>
  <p>
      <strong>Address:</strong>
      <%= @location.address %>
  </p>
  </div>
</div>


<div class="form-actions">
  <%= link_to 'Back', locations_path, :class => 'btn btn-sm btn-info'  %>
  <%= link_to 'Edit', edit_location_path(@location), :class => 'btn btn-sm btn-info' %>
    <%= link_to 'Delete', location_path(@location), class: 'btn btn-sm btn-danger', 
            method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
