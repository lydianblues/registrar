<div class="card top-card">

  <div class="card-header">
    <div style="float:left;"><h2>Groups</h2></div>
    <div style="float:right;">
      <%= link_to 'New group', new_group_path, class: 'btn btn-primary btn-md' %>
    </div>
  </div>

  <div class="card-body">

    <div class="alert alert-info" role="alert">
       Note that the Group name is a combination of the last name of the 
      group owner and group tag, separated by a hash sign.
    </div>

    <div class="table-responsive">
      <table id="groups-table" class="table table-striped table-sm table-hover table-bordered">

        <thead>
          <tr>
            <th>Name</th>
            <th>Owner</th>
            <th>Organization</th>
            <th>Count</th>
            <th></th>
            <th></th>

          </tr>
        </thead>

        <tbody>
          
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>

$('#groups-table').dataTable( {
  processing: true,
  serverSide: true,
  ajax: {
    url: '/groups/datatables',
    processing: true,
    serverSide: true
  },
  columns: [
    {data: 'name'},
    {data: 'owner'},
    {data: 'organization'},
    {data: 'count'},
    {data: 'edit_button', orderable: false, searchable: false },
    {data: 'delete_button', orderable: false, searchable: false }
  ],

} );

</script>
