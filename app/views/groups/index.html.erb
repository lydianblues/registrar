<p id="notice"><%= notice %></p>


<h1>Groups</h1>
<div class="panel panel-default">
  <div class="panel-body">
    Note that the Group name is a combination of the last name of the 
    group leader and group tag, separated by a dollar sign.
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped table-condensed table-hover">
    <thead>
      <tr>
        <th>Group ID</th>
        <th>Group Name</th>
        <th>Group Leader</th>
        <th>Last Update</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%= group.id %></td>
        <td><%= link_to group.leader.last_name + '$' + group.tag, group %></td>
            
        <td><%= link_to group.leader.first_name + ' ' +
          group.leader.last_name, group.leader %></td>

         <td><%= group.updated_at.strftime("%b %-d, %Y") %></td> 

          <td><%= link_to 'Edit', edit_group_path(group),
            class: 'btn btn-primary btn-xs' %></td>
          <td><%= link_to 'Delete', group, class: 'btn btn-xs btn-danger', 
            method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New group', new_group_path, class: 'btn btn-primary btn-sm' %>
