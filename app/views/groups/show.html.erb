<p id="notice"><%= notice %></p>

<div class="panel panel-default">
 	<div class="panel-heading">
	   <h3 class="panel-title">Group Details</h3>
    </div>

    <div class="panel-body">

        <p>
            <strong>Database ID:</strong>
            <%= @group.id %>
        </p>
        <p>
            <strong>Group Owner:</strong>
            <%= link_to @group.owner.wp_first_name + ' ' +
                @group.owner.wp_last_name, @group.owner %>
        </p>
        <p>
            <strong>Group Name:</strong>
            <%= link_to @group.owner.wp_last_name + '#' + (@group.id).to_s, @group %>
        </p>
        <p>
            <strong>Created at:</strong>
            <%= @group.created_at.strftime("%b %-d, %Y") %>
        </p>
        <p>
            <strong>Updated at:</strong>
            <%= @group.updated_at.strftime("%b %-d, %Y") %>
        </p>
        <p>
            <strong>Members:</strong>
            <%= @group.students.count %>
        </p>
        <p>
            <!-- For now, a group can only belong to one registration. -->
            <strong>Registration: </strong>
            <%= link_to @group.registrations[0].code, @group.registrations[0] %>
        </p>
  </div>
</div>

<div class="form-actions">
  <%= link_to 'Back', groups_path, :class => 'btn btn-sm btn-info'  %>
  <%= link_to 'Edit', edit_group_path(@group), :class => 'btn btn-sm btn-info' %>
    <%= link_to 'Delete', group_path(@group), class: 'btn btn-sm btn-danger', 
            method: :delete, data: { confirm: 'Are you sure?' } %>
</div>

<div class="panel panel-default" style="margin-top:2em;">
    <div class="panel-heading">
       <h3 class="panel-title">Group Members</h3>
       <div style="background-color:#def;padding:1em;margin-top:1em;" class="table-responsive">


            <table class="table table-striped table-condensed table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Occupation</th>
                  <th>Organization</th>
                  <th colspan="2"></th>
                </tr>
              </thead>

              <tbody>
                <% @group.students.each do |student| %>
                  <tr>
                    <td><%= link_to student.wp_first_name + " " +
                        student.wp_last_name , student %>
                    </td>

                    <td><%= student.wp_email %></td>
                    <td><%= student.occupation %></td>
                    <td><%= student.organization %></td>  
                      

                    <td><%= link_to 'Edit', edit_student_path(student),
                      class: 'btn btn-primary btn-xs' %></td>
                    <td><%= link_to 'Remove', student, class: 'btn btn-xs btn-danger', 
                      method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>



        </div>
    </div>
</div>
