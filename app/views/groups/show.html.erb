<div class="card top-card">

 	<div class="card-header">
	   <h2>Group Details</h2>
  </div>

    <div class="card-body" style="padding:1em;">

        <p>
            <strong>Database ID:</strong>
            <%= @group.id %>
        </p>
        <p>
            <strong>Group Owner:</strong>
            <%= link_to @group.owner.wp_first_name + ' ' +
                @group.owner.wp_last_name, @group.owner %>
        </p>
        <p>
            <strong>Group Name:</strong>
            <%= link_to @group.owner.wp_last_name + '#' + (@group.id).to_s, @group %>
        </p>
        <p>
            <strong>Created at:</strong>
            <%= @group.created_at.strftime("%b %-d, %Y") %>
        </p>
        <p>
            <strong>Updated at:</strong>
            <%= @group.updated_at.strftime("%b %-d, %Y") %>
        </p>
        <p>
            <strong>Members:</strong>
            <%= @group.students.count %>
        </p>
        <p>
            <!-- For now, a group can only belong to one registration. -->
            <strong>Registration: </strong>
            <% unless @group.registrations.empty? %>
              <%= link_to @group.registrations[0].code, @group.registrations[0] %>
            <% end %>
        </p>
        <p>
            <strong>Course: </strong>
            <% unless @group.registrations.empty? %>
              <%= link_to @group.registrations[0].training.course.name,
                @group.registrations[0].training.course %>
            <% end %>

        </p>

        <p>
            <strong>Training: </strong>
            <% unless @group.registrations.empty? %>
              <%= link_to @group.registrations[0].training.code,
                @group.registrations[0].training %>
            <% end %>

        </p>
  
        <div class="form-actions">
          <%= link_to 'Back', groups_path, :class => 'btn btn-sm btn-info'  %>
          <%= link_to 'Edit', edit_group_path(@group), :class => 'btn btn-sm btn-info' %>
          <%= link_to 'Delete', group_path(@group), class: 'btn btn-sm btn-danger', 
            method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>

      </div>
    </div>

<% content_for :wide_table  do %>
<div class="card top-card">
  

<div class="card-header">
    <div style="float:left;"><h2>Group Members</h2></div>
</div>

  <div class="card-body">

    <div class="table-responsive">
      <table id="group-members-table" class="table table-striped table-sm table-hover table-bordered">
        <thead>
          <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Occupation</th>
            <th>Organization</th>
            <th></th> <!-- DataTables doesn't like colspan on last <th> element. -->
            <th></th>
          </tr>
        </thead>

        <tbody>
        
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>

$('#group-members-table').dataTable( {
  processing: true,
  serverSide: true,
  ajax: {
    url: '/students/datatables/?gid=<%= @group.id %>',
    processing: true,
    serverSide: true
  },
  columns: [
    {data: 'full_name'},
    {data: 'wp_email'},
    {data: 'occupation'},
    {data: 'organization'},
    {data: 'edit_button', orderable: false, searchable: false },
    {data: 'delete_button', orderable: false, searchable: false }
  ],

} );

</script>

<% end %>

