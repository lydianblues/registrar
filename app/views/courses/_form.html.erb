<%= simple_form_for(@course, html: { class: 'form-vertical' }) do |f| %>

    <%= f.error_notification %>

  <fieldset>
    <div class="form-inputs">
            <%= f.input :name %>
            <%= f.input :description %>
    </div>

    <div class="form-actions">
        <%= f.button :submit, class: 'btn btn-md btn-primary' %>
        <%= link_to 'Cancel', courses_path, class: 'btn btn-md btn-warning' %>
    </div>

  </fieldset>
<% end %>