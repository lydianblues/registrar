<div class="card top-card">

  <div class="card-header">
    <div style="float:left;"><h2>Courses</h2></div>
    <div style="float:right;">
      <%= link_to 'New Course', new_course_path, class: 'btn btn-primary btn-md' %>
    </div>
  </div>

  <div class="card-body">

    <div class="table-responsive">
      <table id="courses-table" class="table table-striped table-sm table-hover table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>

$('#courses-table').dataTable( {
  processing: true,
  serverSide: true,
  ajax: {
    url: '/courses/datatables'
  },
  columns: [
    {data: 'course'},
    {data: 'description'},
    {data: 'edit_button', orderable: false, searchable: false },
    {data: 'delete_button', orderable: false, searchable: false }
  ],

} );

</script>
