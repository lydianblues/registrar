<h1>Courses</h1>

<div class="table-responsive">
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= link_to course.name, course %></td>
          <td><%= course.description %></td>
          <td><%= link_to 'Edit', edit_course_path(course),
            class: 'btn btn-primary btn-xs' %></td>
          <td><%= link_to 'Delete', course, class: 'btn btn-xs btn-danger', 
            method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Course', new_course_path, class: 'btn btn-primary btn-sm' %>