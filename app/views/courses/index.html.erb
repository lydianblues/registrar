<div class="card top-card">

  <div class="card-header">
    <div style="float:left;"><h2>Courses</h2></div>
    <div style="float:right;">
      <%= link_to 'New Course', new_course_path, class: 'btn btn-primary btn-md' %>
    </div>
  </div>

  <div class="card-body">

    <div class="table-responsive">
      <table id="courses-table" class="table table-striped table-sm table-hover table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @courses.each do |course| %>
            <tr>
              <td><%= link_to course.name, course %></td>
              <td><%= course.description %></td>
              <td><%= link_to 'Edit', edit_course_path(course),
                class: 'btn btn-primary btn-sm' %></td>
              <td><%= link_to 'Delete', course, class: 'btn btn-sm btn-danger', 
                method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>

$('#courses-table').dataTable( {
  processing: true,
  serverSide: true,
  ajax: {
    url: '/courses/datatables',
    processing: true,
    serverSide: true
  },
  columns: [
    {data: 'full_name'},
    {data: 'wp_email'},
    {data: 'occupation'},
    {data: 'organization'},
    {data: 'edit_button', orderable: false, searchable: false },
    {data: 'delete_button', orderable: false, searchable: false }
  ],

} );

</script>
