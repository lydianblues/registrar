<h1>Trainings</h1>

<div class="table-responsive">
  <table class="table table-striped table-condensed table-hover">
    <thead>
      <tr>
        <th>Course Name</th>
        <th>Code</th>
        <th>Start</th>
        <th>End</th>
        <th>City</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @trainings.each do |training| %>
        <tr>
          <td><%= link_to training.course.name, training.course %></td>
          <td><%= link_to training.code, training %></td>
          <td><%= training.start_date %></td>
          <td><%= training.end_date %></td>
          <td><%= training.location.city %></td>
          <td><%= link_to 'Edit', edit_training_path(training),
            class: 'btn btn-primary btn-xs' %></td>
          <td><%= link_to 'Delete', training, class: 'btn btn-xs btn-danger', 
            method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New training', new_training_path, class: 'btn btn-primary btn-sm' %>