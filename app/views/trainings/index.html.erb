<div class="card top-card">
  
  <div class="card-header" style="margin-bottom:1rem;">
    <div style="float:left;"><h2>Trainings</h2></div>
    <div style="float:right;">
      <%= link_to 'New Training', new_training_path, class: 'btn btn-primary btn-md' %>
    </div>
  </div>

  <div class="card-body">

    <div class="table-responsive" style="min-width:100%;overflow-y:auto;">
      <table id="trainings-table" class="table table-striped table-sm table-hover table-bordered">
        <thead>
          <tr>
            <th>Course Name</th>
            <th>Code</th>
            <th>Start</th>
            <th>End</th>
            <th>City</th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>

$('#trainings-table').dataTable( {
  processing: true,
  serverSide: true,
  ajax: {
    url: '/trainings/datatables'
  },
  columns: [
    {data: 'course'},
    {data: 'code'},
    {data: 'start'},
    {data: 'end'},
    {data: 'city'},
    {data: 'edit_button', orderable: false, searchable: false },
    {data: 'delete_button', orderable: false, searchable: false }
  ],

} );

</script>
