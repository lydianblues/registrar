<p id="notice"><%= notice %></p>

<h1>Trainings</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Code</th>
      <th>Early cost</th>
      <th>Early cost</th>
      <th>Late cost</th>
      <th>Late cost</th>
      <th>New registration closed</th>
      <th>Early registration cutoff</th>
      <th>Course</th>
      <th>Facilitator</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trainings.each do |training| %>
      <tr>
        <td><%= training.start_date %></td>
        <td><%= training.end_date %></td>
        <td><%= training.code %></td>
        <td><%= training.early_cost %></td>
        <td><%= training.early_cost %></td>
        <td><%= training.late_cost %></td>
        <td><%= training.late_cost %></td>
        <td><%= training.new_registration_closed %></td>
        <td><%= training.early_registration_cutoff %></td>
        <td><%= training.course %></td>
        <td><%= training.facilitator %></td>
        <td><%= training.location %></td>
        <td><%= link_to 'Show', training %></td>
        <td><%= link_to 'Edit', edit_training_path(training) %></td>
        <td><%= link_to 'Destroy', training, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

