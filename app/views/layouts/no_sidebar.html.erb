<!DOCTYPE html>
<html>
  <head>
    <title>Registrar</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
     <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-dark bg-primary">
      <a class="navbar-brand" href="/">
        <img alt="Niroga Brand" src="<%= image_url('niroga_32x32.png') %>"  >
      </a>
      <ul class="nav nav-inline navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="/students">Students<span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/courses">Courses</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/trainings">Trainings</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/registrations">Registrations</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/locations">Locations</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/facilitators">Facilitators</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/groups">Groups</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/transactions">Transactions</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/organizations">Organizations</a>
        </li>

      </ul>
        
      <span class="nav nav-inline navbar-nav pull-xs-right">
        <%= link_to "Sign Out", destroy_user_session_path,
          method: "delete", class: "nav-item btn nav-btn btn-danger", role: "button" %>
      </span>

    </nav>

	 <div class="container top-container">

        <% flash.each do |name, msg| %>
            <div class="alert alert-<%= name == "notice" ? "success" :
                "danger" %> alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert"
                    aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <strong><%= msg %></strong>
            </div>
        <% end %>

        <div class="row">

			<%= yield %>


		</div> <!-- row -->
	</div> <!-- container -->


  </body>
</html>
