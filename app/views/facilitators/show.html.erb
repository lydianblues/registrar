<div class="card top-card">
  <div class="card-header">
    <h3>Facilitator Details</h3>
  </div>
  <div class="card-body card-table">
    <div class="row">
      <div class="col-sm-4">Name</div>
      <div class="col-sm-offset-1 col-sm-7">
           <%= @facilitator.name %>
      </div>
    </div>
          <div class="row">
      <div class="col-sm-4">Database ID</div>
      <div class="col-sm-offset-1 col-sm-7">
           <%= @facilitator.id %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-4">Description</div>
      <div class="col-sm-offset-1 col-sm-7">
           <%= @facilitator.description %>
      </div>
    </div>
  
    <div class="form-actions">
      <%= link_to 'Edit', edit_facilitator_path(@facilitator), :class => 'btn btn-sm btn-info' %>
        <%= link_to 'Delete', facilitator_path(@facilitator), class: 'btn btn-sm btn-danger', 
                method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>

  </div>
</div>
